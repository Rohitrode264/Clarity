{
    "manifest_version": 3,
    "name": "Summarizer",
    "version": "1.0.0",
    "description": "A basic example extension with only required keys",
    "icons": {
      "48": "Summarizer.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "scripting",
      "activeTab",
      "tabs"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "action": {
      "default_popup": "index.html"
    }
  }
  